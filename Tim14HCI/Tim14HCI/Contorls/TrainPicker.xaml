<UserControl x:Class="Tim14HCI.Contorls.TrainPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tim14HCI.Contorls"
             xmlns:uc="clr-namespace:Tim14HCI.Contorls"
             mc:Ignorable="d" Height="387.063" Width="732.867" >
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FFF6F6F6" Opacity="0.5"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="407*"/>
        </Grid.RowDefinitions>
        <Label Foreground="Black" FontWeight="Bold" FontSize="16"  >Odaberite voz:</Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBox HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120"/>
            <Button Margin="5" Background="#FF3B3EA9" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Label VerticalAlignment="Center" Foreground="White">Pretarži</Label>
                    <Image Source="/images/search.png"></Image>
                </StackPanel>
            </Button>
        </StackPanel>
        <ListBox x:Name="lsbx_items" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Visible" >
            <ListBox.Background>
                <SolidColorBrush Color="White" Opacity="0.2"/>
            </ListBox.Background>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</UserControl>
